<h1>Log In</h1>

<%= form_tag sessions_path do %>

	<div class="control-group">
    <%= label_tag :email %>
    <div class="controls">
      <%= text_field_tag :email, params[:email] %>
    </div>
  </div>

  <!-- input-field  -->
	<div class="control-group">
    <%= label_tag :password %>
    <div class="controls">
      <%= password_field_tag :password %>
    </div>
  </div>

  <div class="actions">
    <%= submit_tag "Sign In" %>
  </div>
<% end %>
