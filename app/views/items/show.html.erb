<div class="row">
  <div class="col s12">
    <%= render :partial => "item_details" %>
    
    <%# render :partial => "order_items/form" %>
    <%# render :partial => "add_to_cart" %>
  </div>


  <% if logged_in? and (current_user.role?(:admin) or current_user.role?(:manager)) %>
    <div class="col s6">
      <%= render :partial => "price_history" unless @price_history.empty?%>
     </div>
  <% end %>

  <% if logged_in? and !current_user.role?(:customer) %>
     <div class="col s6">
      <%= render :partial => "more_details" %>
    </div>
  <% end %>

  <div class="col s12">
    <%= render :partial => "similar_items" unless @similar_items.empty?%>
  </div>
</div>

<!-- Add buttons to list all, edit project or destroy object -->
<%= render partial: "partials/object_options", locals: {model_name: "item", object: @item}  %>