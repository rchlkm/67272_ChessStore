<!-- <h3><%# @item.name %></h3> -->
<div class="row">
  
  <div class="col s4">
    <%= image_tag 'piece.jpg' %>
  </div>
  <div class="col s8">

    <p>
      <b>Description</b>: <%= @item.description %>
    </p>

    <p>
      <b>Price</b>: <%= @item.current_price.nil? ? 'N/A' : number_to_currency(@item.current_price) %>
    </p>


    <p>
      <b>Category</b>: <%= @item.category.capitalize %>
    </p>

    <p>
      <b>Color</b>: <%= @item.color.nil? ? 'N/A' : @item.color %>
    </p>

    <p>
      <b>Item Weight</b>: <%= @item.weight.nil? ? 'N/A' : @item.weight %> lbs.
    </p>

    <p>
      <b>Active</b>: <%= @item.active ? 'Yes' : 'No' %>
    </p>
    
  
    <% if !logged_in? %>
      <div class="btn btn-black">
        <%= link_to 'Add to Cart', login_path %>
      </div>
    <% elsif current_user.role?(:customer) %>
      <div class="btn btn-black">
        <%= link_to 'Add to Cart', add_to_cart_path(@item.id) %> 
      </div>
    <% elsif current_user.role?(:admin) %>
      <div class="btn btn-black">
        <%= link_to 'Edit', edit_item_path(@item) %> 
      </div>
    <% end %>
  

  </div>
</div>