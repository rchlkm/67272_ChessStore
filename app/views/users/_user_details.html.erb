<div class="row">
  
  <div class="col s8">

    <h5>
      <%= current_user.proper_name %>
    </h5>

    <B><%= current_user.role.capitalize %></B>

    <p>
      <b>Username: </b><%= current_user.username %>
    </p>

    <p>
      <%= current_user.email %>
    </p>

    <p>
      <%= current_user.phone %>
    </p>

    <p>
      <%# current_user.role %>
    </p>

    <% if current_user.role == 'admin' or current_user.role == 'manager' %>
      <p>
        <b>Active</b>: <%= current_user.active ? 'Yes' : 'No' %>
      </p>
    <% end %>

  </div>
</div>