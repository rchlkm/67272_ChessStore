<div class="contain-to-grid">
  <nav class="top-bar" data-topbar role="navigation"> 
    <section class="top-bar-section">
        <!--  link_to image_tag(), home_path -->
     

      <ul class="left">
        <!-- link to home -->
        <li><%= link_to "Home", home_path %></li>

        <!-- options for items -->
        <li class="has-dropdown">
          <%= link_to "Items", items_path %>
          <ul class="dropdown">
            <li><%= link_to "Item List", items_path %></li>
            <li><%= link_to "Reorder List", home_path %></li>
            <li><%= link_to "Add an Item", new_item_path %></li>
          </ul>
        </li>

        <!-- options for purchases -->
        <li>
          <%= link_to "Purchases", purchases_path %>
        </li>

        <!-- options for prices -->
        <li>
          <%= link_to "Prices", item_prices_path %>
        </li>
      </ul>

      <div id="container">
        <div id="login">
          <% if logged_in? %>
            <%= link_to 'Sign Out', logout_path %>
            <br>[<%= current_user.proper_name %>:<%= current_user.role %>]
          <% else %>
            <%= link_to 'Sign In', login_path %>
          <% end %>
        </div>
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <% end %>
        <%= yield %>
      </div>

    </section>
  </nav>
</div>